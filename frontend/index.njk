<script>
  document.addEventListener('DOMContentLoaded', function() {
    const startLearningBtn = document.getElementById('startLearningBtn');
    
    // Scroll to the ASL section when Start Learning is clicked
    startLearningBtn.addEventListener('click', function(e) {
      e.preventDefault();
      // Get the ASL section heading element
      const aslSection = document.getElementById('asl-section');
      // Smooth scroll to the section
      aslSection.scrollIntoView({ behavior: 'smooth' });
    });
  });
</script>

